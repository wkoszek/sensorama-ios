use_frameworks!
platform :ios, '8.0'

def mypods
  pod 'Fabric'
  pod 'Crashlytics'

  pod 'AWSCore'
  pod 'AWSS3'
  pod 'AWSCognito'

  pod "Lock", :inhibit_warnings => true
  pod "JWTDecode"
  pod "SimpleKeychain"

  pod "NSLogger"

  pod 'GBDeviceInfo', '~> 3.5'
  pod 'BZipCompression', '~> 1.0.0'
  pod "MPMessagePack"
  pod 'JTCalendar', '~> 2.0'

  pod "Realm"
  pod 'JSONModel'

  pod 'DZNEmptyDataSet'
end

target 'Sensorama' do
  mypods
end

target :SensoramaTests do
  mypods
end

target 'SensoramaUITests' do
  mypods
end
